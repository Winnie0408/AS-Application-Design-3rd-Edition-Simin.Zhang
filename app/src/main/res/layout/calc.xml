<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/GridLayout1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:columnCount="4"
    android:orientation="horizontal"
    android:rowCount="6">

    <TextView
        android:id="@+id/screen"
        android:layout_columnSpan="4"
        android:layout_gravity="fill"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#FFFFFF"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="50sp" />
    <Button
        android:id="@+id/back"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:text="回退"
        android:textSize="20sp" />
    <Button
        android:id="@+id/AC"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:text="AC"
        android:textSize="20sp" />
    <Button
        android:id="@+id/num1"
        android:layout_height="80dp"
        android:layout_gravity="fill"
        android:text="1"
        android:textSize="30sp" />
    <Button
        android:id="@+id/num2"
        android:layout_gravity="fill"
        android:text="2"
        android:textSize="30sp" />
    <Button
        android:id="@+id/num3"
        android:layout_gravity="fill"
        android:text="3"
        android:textSize="30sp" />
    <Button
        android:id="@+id/plus"
        android:layout_gravity="fill"
        android:text="+"
        android:textSize="30sp" />
    <Button
        android:id="@+id/num4"
        android:layout_height="80dp"
        android:layout_gravity="fill"
        android:text="4"
        android:textSize="30sp" />
    <Button
        android:id="@+id/num5"
        android:layout_gravity="fill"
        android:text="5"
        android:textSize="30sp" />
    <Button
        android:id="@+id/num6"
        android:layout_gravity="fill"
        android:text="6"
        android:textSize="30sp" />
    <Button
        android:id="@+id/minus"
        android:layout_gravity="fill"
        android:text="-"
        android:textSize="30sp" />
    <Button
        android:id="@+id/num7"
        android:layout_height="80dp"
        android:layout_gravity="fill"
        android:text="7"
        android:textSize="30sp" />
    <Button
        android:id="@+id/num8"
        android:layout_gravity="fill"
        android:text="8"
        android:textSize="30sp" />
    <Button
        android:id="@+id/num9"
        android:layout_gravity="fill"
        android:text="9"
        android:textSize="30sp" />
    <Button
        android:id="@+id/multiply"
        android:layout_gravity="fill"
        android:text="*"
        android:textSize="30sp" />
    <Button
        android:id="@+id/dot"
        android:layout_height="80dp"
        android:layout_gravity="fill"
        android:text="."
        android:textSize="30sp" />
    <Button
        android:id="@+id/num0"
        android:layout_width="wrap_content"
        android:layout_gravity="fill"
        android:text="0"
        android:textSize="30sp" />
    <Button
        android:id="@+id/cal"
        android:layout_gravity="fill"
        android:text="="
        android:textSize="30sp" />
    <Button
        android:id="@+id/divide"
        android:layout_gravity="fill"
        android:text="/"
        android:textSize="30sp" />

</GridLayout>
